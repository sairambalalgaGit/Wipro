@model IEnumerable<SecureShop.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Items</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>
                        <ul>
                            @foreach (var item in order.Items)
                            {
                                <li>@item.Product?.Name (x@item.Quantity) - @item.UnitPrice.ToString("C")</li>
                            }
                        </ul>
                    </td>
                    <td>@order.Items.Sum(i => i.Quantity * i.UnitPrice).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no orders yet.</p>
}
