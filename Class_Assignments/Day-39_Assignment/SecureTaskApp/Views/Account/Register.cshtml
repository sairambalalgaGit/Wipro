@model SecureTaskApp.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>

<form asp-action="Register" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" autocomplete="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <!-- For demo only; normally you wouldn't let open self-assign Admin -->
    <div class="form-check mb-3">
        <input asp-for="RegisterAsAdmin" class="form-check-input"/>
        <label asp-for="RegisterAsAdmin" class="form-check-label">Register as Admin (demo)</label>
    </div>

    <button type="submit" class="btn btn-success">Create account</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
