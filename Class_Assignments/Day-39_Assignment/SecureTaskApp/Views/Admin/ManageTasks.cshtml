@model IEnumerable<SecureTaskApp.Data.TaskItem>
@{
    ViewData["Title"] = "Manage Tasks (Admin)";
}
<h2>Manage Tasks (Admin)</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th><th>Title</th><th>Description</th><th>Owner</th><th>CreatedAt (UTC)</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Id</td>
            <td>@t.Title</td>
            <td>@t.Description</td>
            <td>@t.OwnerUserId</td>
            <td>@t.CreatedAt</td>
        </tr>
    }
    </tbody>
</table>
